rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /feedback/{fid} {
      allow read: if true; // demo: open reads
      allow create: if request.auth != null && request.auth.uid == request.resource.data.customerId;
    }

    // TODO: tighten rules â€” ensure appointment exists, status == 'completed', and no prior feedback for same appointmentId.
  }
}

